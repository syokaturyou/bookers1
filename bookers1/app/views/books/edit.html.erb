   <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>

    <% if @book.errors.any? %>
   <%= @book.errors.count %>件のエラー
   <% @book.errors.full_messages.each do |message| %>
   <%= message %>
   <% end %>
   <% end %>

  <h1>Editing Book</h1>
  <%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
  <% end %>

